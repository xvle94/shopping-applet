@import '../../common/common.wxss';
.pay-content{
  margin: 25rpx 40rpx;
  padding: 20rpx;
  border-radius: 10rpx;
  background: #fff;
  box-shadow: 2rpx 2rpx 3rpx #EAE6E9;
}
.pay-content view{
  margin: 10rpx 0;
}
.pay-content .name{
  font-size: 28rpx;
  text-align: right;
  width: 22%;
  display: inline-block;
  color: #B0B0B0;
}
.pay-content .text-left{
  font-size: 28rpx;
  width: 75%;
  display: inline-block;
  padding-left: 15rpx;
}