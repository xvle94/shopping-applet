}

.select_box {
  background-color: #fff;
  padding: 0 10rpx;
  /* width: 30%; */
  position: absolute;
  top: 85rpx;
  z-index: 1;
  overflow: hidden;
  animation: myfirst 0.5s;
  left: 58rpx;  
  border-radius: 10rpx;
}

@keyframes myfirst {
  from {
      height: 0rpx;
  }

  to {
      height: 200rpx;
  }
}

.select_one {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
}






@keyframes around {
  from {
    margin-left: 100%;
  }

  to {
    margin-left: var(--marqueeWidth--);
  }
}

.marquee_container {
  /* background-color: #F67F79; */
  /* padding: 8rpx 0; */
  position: relative;
  width: 96%;
  overflow-x: hidden;
  display: flex;
  align-items: center;
  margin: auto;
  border-radius: 12rpx;

}
.marquee_container image{
  width: 122rpx;
  height: 45rpx;
  background: #fff;
  position: absolute;
  z-index: 10;
  border-right: 1px solid #ddd;
  padding-right: 10rpx;
}
.marquee_text {
  display: inline-block;
  /* display: flex; */
  white-space: nowrap;
  animation-name: around;
  animation-duration: var(--speed--);
  animation-iteration-count: infinite;
  animation-timing-function: linear;
  line-height: 80rpx;
  font-size: 14px;
}
