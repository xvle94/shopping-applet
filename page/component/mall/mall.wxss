@import '../../common/common.wxss';
swiper {
    height: 335rpx;
    margin: 0 20rpx;
}
swiper-item image {
    width: 100%;
    height: 100%;
}

.catal .flex-item{
  display: inline-block;
  /* width: 20%; */
  width: 25%;
  text-align: center;
  margin-top: 20px;
  flex-direction:row;
}
.catal .catal_img{
  width: 45px;
  height: 45px;
  display: block;
  margin: auto
}
.catal .catal_text{
  display: block;
  margin: 10px;
  font-size: 12px
}

.newest-title{
    width: 100%;
    padding: 20rpx 0 10rpx 0;
    height: 40rpx;
    text-align: center;
}

.select-bottom{
    padding: 30rpx 40rpx 30rpx 40rpx;
    height: 180rpx;
}
.select-bottom image,.select-bottom navigator{
    display: block;
    width: 100%;
    height: 100%;
}

.newest-title .cate-list{
  /* height: 80rpx; */
  width: 100%;
  height: 100%;
  text-align: center;
  border-left: 3px solid #fff;
  display: inline-block;
  font-size: 28rpx;
  color: black;
}
.onSelect{
  color: #d81e06 !important;
  font-size: 30rpx !important;
}


.newest{
  background: #fff;
}
.newest-box{
    padding:20rpx 40rpx;
}
.newest-box .newest-list{
    display: inline-block;
    width: 325rpx;
    /* height: 400rpx; */
    margin:0 20rpx 20rpx 0;
    border-radius: 10px;
    text-align: center;
    background: #f5f6f5;
}
.newest-box .newest-list:nth-child(2n){
    margin-right: 0;
}
.newest-box .newest-list .product-img{
    width: 100%;
    height: 100%;  
}
.newest-box .newest-list .newest-text{
    font-size: 32rpx;
    text-align: left;
    width: 100%;
    display: inline-block
}
.newest-box .newest-price,.newest-box #unit{
  color: #d81e06
}
.newest-box .newest-pname{
  font-size: 24rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  align-content: center;
  height: 70rpx;
}
.newest-box .newest-img image{
  width: 32px;
  height: 32px;
}
.newest-box .newest-img{
   width:20%;
   display: inline-block
}
.newest-box .newest-down{
  padding:8px;
  height: 110rpx;
}
.newest-list .newest-up{
  height:320rpx;
}
