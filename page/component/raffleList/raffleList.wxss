/* page/component/raffleList/raffleList.wxss */

.history-list{
  border: 1px solid #ddd;
  border-radius: 6px;
  margin: 10rpx 5%;
  background: #fff;
  padding: 30rpx 0;
  box-shadow: 0px 0px 5px #ddd;
}
.active-list{
  margin: 20rpx;
  border-radius: 12rpx;
  box-shadow: 3px 4px 3px #DBDBDB;
}
.active-list image{
  width: 100%;
  border-radius: 12rpx 12rpx 0 0;
  height: 320rpx;
}
.active-list text{
  line-height: 38px;
  padding-left: 10px;
  font-size: 30rpx;
}
.pic{
  opacity: 0;
  transition: opacity 0.3s linear 0.3s;
}
.Action{
  opacity: 1;
 }