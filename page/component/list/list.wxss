@import '../../common/common.wxss';

.banner{
    height: 480rpx;
}
.banner .banner-bg{
    width: 100%;
    height: 480rpx;
}
.banner .banner-content{
    position: absolute;
    width: 100%;
    text-align: center;
    top: 3%;
}
.banner .shop-head{
    width: 150rpx;
    height: 150rpx;
    display: block;
    margin: auto;
    padding: 10px 0;
}
.banner .shop-name{
    color:#fff;
    font-weight: 600;
    font-size: 42rpx;
}


.newest{
    border-top: 1px solid #DFE0E3;
}
.newest-box{
    padding:20rpx 40rpx;
}
.newest-box .newest-list{
    display: inline-block;
    width: 325rpx;
    /* height: 325rpx; */
    margin:0 20rpx 20rpx 0;
    border-radius: 10px;
    text-align: center;
    background: #f5f6f5;
}
.newest-box .newest-list:nth-child(2n){
    margin-right: 0;
}
.newest-box .newest-list .product-img{
    width: 100%;
    height:100%;
}
.newest-box .newest-list .newest-text{
    font-size: 32rpx;
    text-align: left;
    width: 100%;
    display: inline-block
}
.newest-box .newest-price,.newest-box #unit{
    color: #d81e06
}
.newest-box .newest-pname{
    font-size: 24rpx;
    height: 70rpx;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    align-content: center;
}
.newest-box .newest-img image{
    width: 32px;
    height: 32px;
}
.newest-box .newest-img{
    width:20%;
    display: inline-block
}
.newest-box .newest-down{
    padding:8px;
    height: 110rpx;
}
.newest-list .newest-up{
    height: 320rpx;
}


.search{
    padding: 20rpx;
}
.search-text{
    display: flex;
    justify-content: center;
    align-items: center;
    height: 60rpx;
    color: #C9C9C9;
    text-align: center;
    background: #EEEEEE;
    border-radius: 25rpx;
    font-size: 13px
}
.search-text icon{
    margin-right: 10rpx;
}
.shop-detail{
    background-color: #F5F6F8;
}
.shop-detail image{
    width: 50rpx;
    height: 50rpx;
}
.shop-detail .ads-text{
    /* text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    line-height: 32rpx;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical; */
    text-overflow: ellipsis;
    white-space:nowrap;
    overflow: hidden;
    width: 70%;
    font-size: 32rpx;
    margin-left: 10rpx;
}
.detail-top{
    display: flex;
    align-items: center;
    padding: 20rpx 40rpx;
}
.call-img{
    width: 16%;
    float: right;
}
.call-img image{
    float: right;
}
.detail-down{
    margin: 0px 20px;
    border-top: 1px dashed #B2B2B2;
    padding: 20rpx 0;
}
.detail-down text{
    color:  #B2B2B2;
    font-size: 28rpx;  
}


.categoty-title .cate-list{
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    display: inline-block;
    width: 33%;
    font-size: 28rpx;
    color: #877F7A;
}
.categoty-title .cate-list.on{
    color: #d81e06;
    font-size: 30rpx;
}

.shop_text {
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    align-content: center;
    color: #B2B2B2;
    font-size: 26rpx;
    line-height: 50rpx;
    margin-top: 20rpx;
  }