@import '../../common/common.wxss';
.search-box {
    position: relative;
    display: flex;
    /* justify-content: space-between; */
    padding-top: 26rpx;
    margin-left: 20rpx;
}
.search-input {
    margin-left: 10rpx;
    width: 73%;
    height: 60rpx;
    line-height: 60rpx;
    padding: 0 20rpx 0 54rpx;
    background: #f8f8f8;
    border-radius:40rpx;
    font-size: 32rpx;
    border: 2rpx solid #ddd;
}

.search-icon {
    position: absolute;
    left: 30rpx;
    top: 44rpx;
    width: 35rpx;
    height: 35rpx;
}
