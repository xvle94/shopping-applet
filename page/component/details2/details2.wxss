@import '../../common/common.wxss';

.goods-box{
    position: relative;
    padding: 40rpx 45rpx;
    background: #fff;
}
.goods-box .goods-thumb{
    width: 100%;
    height: 500rpx;
}
.goods-box .g-detail{
    display: block;
    font-size: 28rpx;
    margin-top: 20rpx;
}
.priceName{
    font-size: 28rpx;
}
.goods-box .g-price{
    display: inline-block;
    margin-top: 10rpx;
    color: #FF767F;
    font-weight: 600;    
}
.shop-box{
    height: 100rpx;
    display: flex;
    align-items: center;
    padding: 0 45rpx;
    background: #fff;
    margin-top: 20rpx;    
}
.shop-box image{
    width: 65rpx;
    height: 65rpx;
}
.shop-box .shop-name{
    font-size: 30rpx;
    font-weight: 600; 
    margin-left: 10rpx;   
}
.shop-box .shop-entry{
    float: right;
    color: #E70314;
    font-size: 28rpx;
    border: 1px solid #E70314;
    padding: 2rpx 22rpx;
    border-radius: 25px;
}
.shop-box .shop-title{
    width: 90%;
}
.goods-tab-box{
    background-color: #fff;
    margin-top: 20rpx;    
    padding: 20rpx 0 100rpx 0;
}
.goods-tab-box .title{
    display: block;
    padding-left: 50rpx;
    font-size: 30rpx;
}
.goods-tab-box .detail{
    font-size: 30rpx;
    padding:15rpx 50rpx;
    display: block;
}
.goods-tab-box image{
    width: 100%;
    margin-top: 20rpx;
    
}

.goods-operation{
    background: #fff;
    align-items: center;
    position: fixed;
    bottom: 0;
    width: 100%;    
    height:90rpx;
}

.btn-buy{
    background: #FF767F;
    color: #fff;
    padding: 0rpx 45rpx;
    font-size: 30rpx;
    float: right;
    line-height: 90rpx;    
}

