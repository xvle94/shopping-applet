@import '../../common/common.wxss';
.pro-box{
  padding: 10rpx 20rpx;
}
.i-top{
  height: 400rpx;
  padding: 25rpx;
  text-align: center
}
.i-top image{
  width: 100%;
  height: 400rpx;
}
.i-top .top-text{
  position: absolute;
  top: 8%;
  left: 40%;
}
.i-top text{
  color: #fff;
  display: block;
}
.i-top .titel{
  font-size: 28rpx;
}
.i-top .num{
  font-size: 32px;
  font-weight: 600;  
}
.i-top .detail{
  margin-top: 20rpx;
  border-radius: 25px;
  border: 1px solid #fff;
  padding: 4rpx 20rpx;
  font-size: 28rpx;  
}
.i-content{
  background: #fff;
}
.i-content .title{
  text-align: center;
  color: #FF767F;
  font-weight: 600;
  line-height: 75rpx;
  display: inline-block;
  font-size: 35rpx;
}
.pro-list{
  display: inline-block;
  padding: 10rpx;
  width: 45%;
}
.pic{
  width: 300rpx;
  height: 300rpx; 
  display: block;
  padding-left: 20rpx;
  transition: opacity 0.3s linear 0.3s;
}
.pro-list .pro-price{
  padding-left: 20rpx;
}
.pro-list .pro-icon{
  width:45rpx;
  height: 45rpx;  
}
.pro-list .pro-name{
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  align-content: center;
  font-size: 28rpx;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
  text-align: left;
  height: 80rpx;
  padding-left: 20rpx;
}
.pro-list .pro-btn{
  display: block;
  font-size: 28rpx;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
  text-align: left;
}
.pro-list .pro-integral{
  color: #FF767F;
}
.pro-list .pro-num{
  color: #9B9B9B;
  font-size: 26rpx;
  text-align: right;
  width: 45%;
}
.pro-list .pro-btn{
  background: #FF767F;
  color: #fff;
  padding: 8rpx 15rpx;
  width: 160rpx;
  text-align: center;
  border-radius: 25px;
  margin-left: 20rpx;  
}
.pro-head{
  display: flex;
  align-items: center;
  justify-content: center;
  padding-top: 15rpx;
}
.pro-head image{
  width:40rpx;
  height: 40rpx;
  margin: 0 25rpx;
}
.pro-list view{
  display: flex;
  align-items: center;
}
.p-view{
  padding-left: 20rpx;
}
.prize{
  text-align: right;
  padding-right: 20rpx;
  display: inline-block;
}
.prize image{
  width: 96rpx;
  height: 96rpx;
}
.Action{
  opacity: 1;
 }

 .drop-down {
  height:90rpx;
}
.drop-down image{
  width: 45rpx;
  height: 45rpx;
  margin: 10px 10rpx 0 10rpx;
  vertical-align: middle;
}
.drop-down text{
  margin-top: 16rpx;
  display: inline-block;
  vertical-align: middle;
  font-size: 30rpx;
}
.drop-down navigator{
  display: initial;
}
.list-msg2{
  display: inline-block;
}
.select_box {
  background-color: #fff;
  padding: 0 10rpx;
  position: absolute;
  top: 515rpx;
  z-index: 1;
  overflow: hidden;
  animation: myfirst 0.5s;
  left: 58rpx;  
  border-radius: 10rpx;
}
@keyframes myfirst {
  from {
      height: 0rpx;
  }
  to {
      height: 200rpx;
  }
}
.select_one {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
}