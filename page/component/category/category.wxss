@import '../../common/common.wxss';

page,.main{
    height: 100%;
}
.search{
    padding: 20rpx;
}
.search-text{
    display: flex;
    justify-content: center;
    align-items: center;
    height: 50rpx;
    color: #C9C9C9;
    text-align: center;
    background: #EEEEEE;
    border-radius: 25rpx;
    font-size: 13px
}
.search-text icon{
    margin-right: 10rpx;
}
.categroy-left{
    background: #fff;
    width: 100%;
    border-right: 1px solid #ddd;
    box-sizing: border-box;
}
.categroy-left .cate-list{
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    border-left: 3px solid #fff;
    display: inline-block;
    width: 100%;
    font-size: 28rpx;
    color: #877F7A;
}
.categroy-left .cate-list.on{
    color: #d81e06;
    font-size: 30rpx;
}

.cate-box{
    height: 100%;
    padding:40rpx;
    box-sizing: border-box;
}
.cate-box .cate-banner image{
    display: block;
    width: 100%;
    height: 190rpx;
}
.cate-title{
    position: relative;
    height: 30rpx;
    line-height: 30rpx;
    padding:30rpx 0 55rpx;
    text-align: center;
    color: #AB956D;
    font-size: 28rpx;
}
.cate-title::before{
    position: absolute;
    left: 130rpx;
    top: 43rpx;
    content: '';
    width: 70rpx;
    height: 4rpx;
    background: #AB956D;
}
.cate-title::after{
    position: absolute;
    right: 130rpx;
    top: 43rpx;
    content: '';
    width: 70rpx;
    height: 4rpx;
    background: #AB956D;
}

.sort{
    text-align: right;
    height: 80rpx;
    line-height: 80rpx;
}
.sort view{
    display: inline-block;
}
.sort image{
    height: 16px;
    width:16px;
    margin-right: 30rpx;
}
.sort text{
    height: 16px;
    width: 16px;
    color: #877F7A;
    font-size: 30rpx;
    margin-left: 40rpx;
    margin-right: 30rpx;
}

.newest{
    background: #fff;
}
.newest-box{
    padding:20rpx 40rpx;
}
.newest-box .newest-list{
    display: inline-block;
    width: 325rpx;
    margin:0 20rpx 20rpx 0;
    border-radius: 10px;
    text-align: center;
    background: #f5f6f5;
}
.newest-box .newest-list:nth-child(2n){
    margin-right: 0;
}
.newest-box .newest-list .product-img{
    width: 100%;
    height: 100%;
}
.newest-box .newest-list .newest-text{
    font-size: 32rpx;
    text-align: left;
    width: 100%;
    display: inline-block
}
.newest-box .newest-price,.newest-box #unit{
    color: #d81e06
}
.newest-box .newest-pname{
    font-size: 24rpx;
    height: 70rpx;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    align-content: center;
}
.newest-box .newest-img image{
    width: 32px;
    height: 32px;
}
.newest-box .newest-img{
    width:20%;
    display: inline-block
}
.newest-box .newest-down{
    padding:8px;
    height: 110rpx;
}
.newest-list .newest-up{
    height: 320rpx;
}
.onSelect{
    color: #d81e06 !important;
    font-size: 30rpx !important;
}
.onSortColor{
    color: #d81e06 !important;
}
.newest .text-center{
    background: #F0F2F5;

}
    